generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincrement())
  boardName String
  boardType String
  imageSrc String
  description String
  cards Card[]
}

model Card {
  id Int @id @default(autoincrement())
  title String
  note String
  author String
  gifSrc String
  upvotes Int
  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId Int
}
